# Server Configuration
PORT=8000
NODE_ENV=production

# Database
# URI for your MongoDB instance (e.g., MongoDB Atlas or DigitalOcean Managed DB)
MONGO_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>

# Security
# Secret key for signing JWT tokens
JWT_SECRET=your_jwt_secret_key

# DigitalOcean Spaces (Object Storage)
# Endpoint for your Spaces region (e.g., https://blr1.digitaloceanspaces.com)
DO_SPACES_ENDPOINT=https://blr1.digitaloceanspaces.com
# Access Key ID from DigitalOcean API settings
DO_SPACES_KEY=your_spaces_access_key
# Secret Access Key from DigitalOcean API settings
DO_SPACES_SECRET=your_spaces_secret_key
# Main bucket name for application uploads (images, etc.)
DO_SPACES_BUCKET=hairone-uploads

# Database Backups (Optional)
# If set, backups will be stored in this separate bucket.
# If not set, they will be stored in the main DO_SPACES_BUCKET.
DO_BACKUP_BUCKET=hairone-backups
